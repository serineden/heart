import random

x = (random.randint(0,10))
i = -1
z = 0

while x != i:
    i = int(input("Scrie un numar: "))
    if i > x:
        print("Numarul e prea mare!")
    elif i < x:
        print("Numarul e prea mic!")
    z += 1

if z == 1:
    print("Felicitari, ai nimerit din prima!")
else:
    print("Felicitari, ai nimerit din "+ str(z) + " incercari!")
